package com.revature.oopexercise;

import java.util.List;
import java.util.ArrayList;

public class Main {
	
	public static void print(List<Piece> objs) {
		
		for(Piece p : objs) {
			
			System.out.printf("%c at (%d, %d)\n", p.label, p.pos[0], p.pos[1]);
		}
	}

	public static void main(String[] args) {
		
		//Creation
		
		//Valid Creation
		List<Piece> pieces = new ArrayList<Piece>();
		pieces.add(new Pawn(3, 4, 1));
		pieces.add(new Rook(7, 7, 0));
		
		//Invalid Creation
		try {
			
			pieces.add(new Pawn(-1, -1, 0));
		}
		
		catch (InvalidMoveException e){
			
			System.out.printf("Attempt to create Piece with invalid initial position");
		}
		
		print(pieces);
	}
}
