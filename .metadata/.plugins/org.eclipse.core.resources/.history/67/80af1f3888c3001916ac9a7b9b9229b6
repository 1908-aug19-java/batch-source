package com.revature.oopexercise;

public class Pawn extends Piece{

	public Pawn() {
		
		super();
		status = 1; value = 1;
	}
	
	public Pawn(int xpos, int ypos, int ctype) {
		
		this();
		this.pos[0] = xpos; this.pos[1] = ypos;
		this.color = ctype;
	}
	
	public boolean verify(int[] pos) {
		
		if(status == 1) {
			
			int xdiff = this.pos[0] - pos[0];
			int ydiff = this.pos[1] - pos[1];
			
			if( (xdiff == 0) && ((ydiff * ydiff) == (1 - 2 * this.color))){
				
				return true;
			}
		}
		
		return false;
	}
	
	public boolean verify(int x, int y) {
		
		int[] param = {x, y};
		
		return this.verify(param);
	}
	
	public void move(int[] pos) {
		
		if(this.verify(pos)) {
			
			this.pos[0] = pos[0]; this.pos[1] = pos[1];
			return;
		}
		
		throw new InvalidMoveException();
	}
	
	public void move(int x, int y){
		
		int[] param = {x, y};
		
		this.move(param);
	}
}
